---
import BaseLayout from "./BaseLayout.astro";

const { frontmatter } = Astro.props;
---
<style>
    /* for some reason this isn't working */
    h2 {
        color: purple;
    }

    .publish-details {
        font-style: italic;
    }

    .tag {
        font-family: monospace;
        background-color: lightgray;
        margin-right: 0.5rem;
    }

    img {
        width: 100%;
    }
</style>
<BaseLayout pageTitle={frontmatter.title}>
<p class="publish-details">Written by {frontmatter.author} on {frontmatter.pubDate.slice(0, 10)}</p>
<p><strong>Tags:</strong> {frontmatter.tags.map((tag: string) => <span class="tag">{tag}</span>)}</p>
<img src={frontmatter.image.url} alt={frontmatter.image.alt} />
<slot />
</BaseLayout>